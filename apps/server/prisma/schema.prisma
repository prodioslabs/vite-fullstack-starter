generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  SUPER_ADMIN
  USER
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String   @unique
  role     UserRole @default(USER)
  salt     String
  password String
}

model Session {
  objId     String   @id @default(auto()) @map("_id") @db.ObjectId
  id        String   @unique
  sid       String   @unique
  data      String
  expiresAt DateTime
}
